<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Layout for the Starting coordinates and Ending in bottom left -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|left"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingRight="5dp">

        <!-- Create horizontal layout for starting coordinates -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- "Starting Coordinates" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Coordinates: "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Actual Starting Coordinate -->
            <TextView
                android:id="@+id/starting_coordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0, 0)"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:paddingRight="50dp"/>

        </LinearLayout>

        <!-- Create horizontal layout for ending coordinates -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!-- "Ending Coordinates" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ending Coordinates: "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Actual ending coordinates -->
            <TextView
                android:id="@+id/ending_coordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="50dp"
                android:text="(0, 0)"
                android:textColor="#FFFFFF"
                android:textSize="20sp"

                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>